.provider-edit
  .errors.hidden Some Error
  .icon
    img.shadow-icon(data-src="#{provider.icon}" scalable="true")
  .vals
    .standard
      .val
        .label Account Name
        input.lexi(value="#{name}" data-key="name")
      if isCustom
        .val
          .label Endpoint
          input#endpoint.lexi(value="#{provider.endpoint}" data-key="endpoint")
          .button#test-endpoint.lifecycle.hidden Test Endpoint
    .provider-specific

  .save-section
    .cancel#cancel Cancel
    .button.lifecycle#save Save 
  .apps
    h2 Apps launched on this account
    each app in apps
      .app
        .name= app.name
        a.manage(href="#{app.managePath}") Manage
        a(href="#{app.removePath}") Remove
